{
    "compilerOptions": {
        // "lib": ["DOM", "ES2022"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "checkJs": true
    },
    "include": ["src/"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
